doctype html
html
    head
        title= title
        link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css")
        link(rel='stylesheet', href='/stylesheets/style.css')
        script(src="//ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.js")
        script(src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js")
        script(src="//ajax.googleapis.com/ajax/libs/angularjs/1.5.7/angular.js")
        script(src="//ajax.googleapis.com/ajax/libs/angularjs/1.5.7/angular-animate.js")
        script(src="//ajax.googleapis.com/ajax/libs/angularjs/1.5.7/angular-aria.js")
        script(src="//ajax.googleapis.com/ajax/libs/angular_material/1.1.0-rc.5/angular-material.min.js")
        script(src="/javascripts/app.js")

        script(src="/javascripts/controllers/userCtrl.js")
        if user
            script
                var user = !{JSON.stringify(user)};

        block scripts
    body(ng-app="pollApp",ng-controller="userCtrl")
        nav.navbar.navbar-inverse
            div.container-fluid
                a.navbar-brand(href="/") Poll App
                ul.nav.navbar-nav
                    li: a(href="/polls") Polls
                ul.nav.navbar-nav.navbar-right
                    li: a(login-required, href="/login") {{user ? user.name : 'Log in'}}
        div.container
            block content
